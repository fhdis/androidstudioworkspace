<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/tab_date"
        >

        <TextView
            android:id="@+id/txt_all_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="全部"/>

        <TextView
            android:id="@+id/txt_ongoing_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="进行中"
            />

        <TextView
            android:id="@+id/txt_finish_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="已完成"/>

        <TextView
            android:id="@+id/txt_cancel_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="已取消/退单"/>
    </LinearLayout>



    <RadioGroup
        android:id="@+id/tab_date"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FACF1C"
        >
        <RadioButton
            android:layout_marginLeft="50dp"
            android:id="@+id/btn_recent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="近两日"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:checked="true"
            android:button="@null"
            android:background="@drawable/radiogroup_shape"
            />
        <RadioButton
            android:layout_marginRight="50dp"
            android:id="@+id/btn_oneday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@mipmap/buttonarrow"
            android:background="@drawable/radiogroup_shape"
            />
    </RadioGroup>
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tab_menu"
        android:background="#F3F3F3"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/div_tab_bar"
        >
    </FrameLayout>

</RelativeLayout>