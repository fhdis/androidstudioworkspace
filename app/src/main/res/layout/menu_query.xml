<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tab_date"
        >

        <TextView
            android:id="@+id/txt_all_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="全部"/>

        <TextView
            android:id="@+id/txt_ongoing_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="进行中"
            />

        <TextView
            android:id="@+id/txt_finish_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="已完成"/>

        <TextView
            android:id="@+id/txt_cancel_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="已取消/退单"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal" >

        <Button android:id="@+id/btn_recent"
            android:layout_height="40dp"
            android:layout_width="80dp"
            android:text="近两日"
            />

        <Button android:id="@+id/btn_oneday"
            android:layout_height="40dp"
            android:layout_width="120dp"
            android:text="选择日期"
            android:drawableRight="@mipmap/buttonarrow"/>
    </LinearLayout>
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_menu"
        >
    </FrameLayout>

</RelativeLayout>