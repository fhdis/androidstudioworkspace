<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FACF1C"
        android:id="@+id/linearlayout">
        <android.support.v7.widget.Toolbar
            android:id= "@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>
      <TextView
          android:layout_marginLeft="40dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="可用余额（元）"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="0.00"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="提现"
                android:layout_marginRight="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="#C29C0C">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中国工商银行(1931)      详情"
                android:drawableRight="@mipmap/ic_menu_left"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:id="@+id/yinhangka"/>
        </LinearLayout>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout"
        android:stretchColumns="*"
        android:divider="@drawable/line_h"
        android:showDividers="beginning|middle|end"
        android:orientation="vertical">

        <TableRow
            android:divider="@drawable/line_h"
            android:showDividers="beginning|middle|end"
            android:orientation="horizontal">
            <TextView
                android:background="#FFF7B2"
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="账单"
                android:drawableLeft="@mipmap/ic_manage_wallet_order"
                android:gravity="center"/>
            <TextView
                android:background="#FFF7B2"
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="余额流水"
                android:drawableLeft="@mipmap/ic_manage_wallet_liushui"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:divider="@drawable/line_h"
            android:showDividers="beginning|middle|end">
            <TextView
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="6月1日  +15元"
                android:gravity="center"/>
            <TextView
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="6月1日  30元"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:divider="@drawable/line_h"
            android:showDividers="beginning|middle|end">
            <TextView
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="6月1日  +15元"
                android:gravity="center"/>
            <TextView
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="6月1日  40元"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:divider="@drawable/line_h"
            android:showDividers="beginning|middle|end">
            <TextView
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="6月2日  +10元"
                android:gravity="center"/>
            <TextView
                android:padding="8dp"
                android:layout_width="1dp"
                android:text="6月1日  0元"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>